<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <servlet>
    <servlet-name>ServletStateLessEjb</servlet-name>
    <servlet-class>com.example.ejb.servlet.ServletStateLessEjb</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletStateLessEjb</servlet-name>
    <url-pattern>/servlet/greeting</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>ServletStateFulEjb</servlet-name>
    <servlet-class>com.example.ejb.servlet.ServletStateFulEjb</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletStateFulEjb</servlet-name>
    <url-pattern>/servlet/click</url-pattern>
  </servlet-mapping>
  
  
</web-app>